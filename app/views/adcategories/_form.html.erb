<%= form_for(@adcategory, :html => {:class => "custom"}) do |f| %>
<div class="row">
 <div class="large-4 columns">
  <% if @adcategory.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@adcategory.errors.count, "error") %> prohibited this adcategory from being saved:</h2>

      <ul>
      <% @adcategory.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
