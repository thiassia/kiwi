</div>

<div id="frm_new_user" class="reveal-modal small">
 	<%= render 'shared/new_user'%>	
  	<a class="close-reveal-modal">&#215;</a>
</div>

<div id="frm_new_ad" class="reveal-modal small">
 	<%= render 'shared/new_ad'%>	
  	<a class="close-reveal-modal">&#215;</a>
</div>

<%= javascript_include_tag "application" %>

</body>
</html>
